{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "plugins": ["react"],
  "ecmaFeatures": {
    "classes": true,
    "jsx": true
  },
  "rules": {
    "brace-style": [2, "stroustrup"],
    "max-len": [2, 80],
    "no-restricted-syntax": [2,
      "DebuggerStatement",
      "LabeledStatement",
      "WithStatement"
    ],
    "no-param-reassign": [2, {"props": false}],
    "no-underscore-dangle": [2, {"allowAfterThis": true}],
    "object-curly-spacing": [2, "never"],
    "react/jsx-boolean-value": [2, "always"],
    "semi": [2, "never"]
  }
}
