{
  "bail": true,
  "moduleDirectories": [
    ".",
    "components",
    "node_modules",
    "pages",
    "utils",
    "wrappers"
  ],
  "moduleFileExtensions": ["js", "json", "jsx"],
  "moduleNameMapper": {
    "^gatsby-helpers$": "<rootDir>/node_modules/gatsby/dist/isomorphic/gatsby-helpers.js",
    "^config$": "<rootDir>/__tests__/__mocks__/configMock.js",
    "^.+\\.(css)$": "<rootDir>/__tests__/__mocks__/styleMock.js",
    "^.+\\.(eot|gif|jpe?g|png|svg|ttf|woff2?)$": "<rootDir>/__tests__/__mocks__/fileMock.js"
  },
  "setupTestFrameworkScriptFile": "<rootDir>/__tests__/__setup.js",
  "testRegex": ".*/__tests__/.*\\.test\\.(js|jsx)$"
}
